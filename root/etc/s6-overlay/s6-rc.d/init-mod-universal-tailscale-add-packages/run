#!/usr/bin/with-contenv bash

## Ubuntu
if [ -f /usr/bin/apt ]; then
  echo "\
    dnsutils \
    net-tools \
    iputils-ping \
    traceroute" >> /mod-repo-packages-to-install.list
fi

# Alpine
if [ -f /sbin/apk ]; then
  echo "\
    bind-tools \
    net-tools" >> /mod-repo-packages-to-install.list
fi
